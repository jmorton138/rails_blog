<button class="home"><%= link_to "Home", articles_path(@article) %></button>

<button id="new-post"><%= link_to "New Article", new_article_path %></button>

<h1>Bloggy McBlogface</h1>


    <% @articles.each do |article| %>
        <div class="container blog">
            <h2 class="post-title">
                <%= link_to article.title, article %>
                
            </h2>
            <p class="post-thumb">
                <%= article.body %>    
            </p>
            <p class="read-more">
                <%= link_to "Read more...", article %>
            </p>
        </div>
    <% end %>





